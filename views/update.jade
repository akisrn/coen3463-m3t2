      script(src='https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js')
  body
    .header
      .container
        .row
          .col-md-5
            // Logo
            .logo
              h1
                a(href='/') Successful Kickstarter Projects
          .col-md-7
            .navbar.navbar-inverse(role='banner')
              nav.collapse.navbar-collapse.bs-navbar-collapse.navbar-right(role='navigation')
                ul.nav.navbar-nav
                  li.dropdown
                    a.dropdown-toggle(href='#', data-toggle='dropdown')
                      if(user)
                        | You are logged in as : #{user.username} 
                        b.caret
                      ul.dropdown-menu.animated.fadeInUp
                        li
                          a(href='/auth/logout') Logout
    .page-content
      .row
        .col-md-2
          .sidebar.content-box(style='display: block;')
            ul.nav
              // Main menu
              li.current
                form(role="form", action="/", method="post")
                  .form-group
                    button.btn.btn-default(type="submit" style="width:100%;border:none") 
                      i.glyphicon.glyphicon-home
                      |  Dashboard
              li
                form(role="form", action="/kickstarters/list", method="post")
                  .form-group
                    button.btn.btn-default(type="submit" style="width:100%;border:none") 
                      i.glyphicon.glyphicon-calendar
                      |  Database
        .col-md-15
          .row
            .col-md-9
              .content-box-large
                .panel-body
                  form.form-horizontal(method='post', action='/kickstarters/:kickstarterId/save')
                    fieldset
                      legend Update Kickstarter Project
                      .form-group
                        label.col-md-3.control-label(for='text-field') Project Name
                        .col-md-7
                          input.form-control(type='text' name='project_name', required='' value = "#{kickstarter.project_name}")
                      .form-group
                        label.col-md-3.control-label(for='text-field') Raised Amount
                        .col-md-7
                          .input-group
                            span.input-group-addon $
                            input.form-control(type='text' name='raised_amount', required='' value = "#{kickstarter.raised_amount}")
                            span.input-group-addon .00
                      .form-group
                        label.col-md-3.control-label(for='text-field') Funding Date
                        .col-md-7
                            .input-group
                              span.input-group-addon
                                i.glyphicon.glyphicon-calendar
                              input.form-control(type='text' name='funding_date', required='' placeholder='Please write in MM/DD/YYYY format' value = "#{kickstarter.funding_date}")
                      .form-group
                        label.col-md-3.control-label(for='text-field') Website
                        .col-md-7
                          input.form-control(type='text' name='website', required='' value = "#{kickstarter.website}")
                      .form-group
                        label.col-md-3.control-label(for='text-field') Kickstarter Page Link
                        .col-md-7
                          input.form-control(type='text' name='kickstarter_page', required='' value = "#{kickstarter.kickstarter_page}")
                      .form-group
                        label.col-md-3.control-label(for='text-field') Kickstarter Fund Goal 
                        .col-md-7
                          .input-group
                            span.input-group-addon $
                            input.form-control(type='text' name='kickstarter_fund', required='' value = "#{kickstarter.kickstarter_fund}")
                            span.input-group-addon .00
                      .form-group
                        label.col-md-3.control-label(for='text-field') Youtube Link
                        .col-md-7
                          input.form-control(type='text' name='youtube_link', required='' value = "#{kickstarter.youtube_link}")
                      .form-group
                        label.col-md-3.control-label(for='text-field') Location
                        .col-md-7
                          input.form-control(type='text' name='location', required='' value = "#{kickstarter.location}")
                      .form-group
                        label.col-md-3.control-label(for='text-field') Category
                        .col-md-7
                          input.form-control(type='text' name='category', required='' value = "#{kickstarter.category}")
                      .form-group
                        label.col-md-3.control-label(for='text-field') Total Number of Backers
                        .col-md-7
                          input.form-control(type='text' name='backer_count', required='' value = "#{kickstarter.backer_count}")
                      .form-group
                        label.col-md-3.control-label(for='text-field') Launch Date
                        .col-md-7
                            .input-group
                              span.input-group-addon
                                i.glyphicon.glyphicon-calendar
                              input.form-control(type='text' name='launch_date', required='' placeholder='Please write in MM/DD/YYYY format' value = "#{kickstarter.launch_date}")
                      .form-group
                        label.col-md-3.control-label(for='text-field') Social Pages
                        .col-md-7
                          input.form-control(type='text' name='social_pages', required='' value = "#{kickstarter.social_pages}")
                          input.form-control(type='hidden', name='kickstarter_id' value = "#{kickstarter._id}")
                      br
                      center
                        if (errorLog)
                          .form-group.has-error
                            span.help-block
                              i.fa.fa-warning
                              |  #{errorLog}

                        button.btn.btn-success(type="submit" style="width:auto;border:none") 
                         i.glyphicon.glyphicon-ok
                         |  Update Entry
                              
    footer
      .container
        .copy.text-center
