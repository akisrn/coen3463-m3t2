html
  head
    title Update
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    // jQuery UI
    link(href='https://code.jquery.com/ui/1.10.3/themes/redmond/jquery-ui.css', rel='stylesheet', media='screen')
    // Bootstrap
    link(href='/./bootstrap/css/bootstrap.min.css', rel='stylesheet')
    // styles
    link(href='/./css/styles.css', rel='stylesheet')
    // HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
    // WARNING: Respond.js doesn't work if you view the page via file://
    //if lt IE 9
      script(src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')
      script(src='https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js')
  body
    .header
      .container
        .row
          .col-md-5
            // Logo
            .logo
              h1
                a(href='/') Successful Kickstarter Projects
    .page-content
      .row
        .col-md-2
          .sidebar.content-box(style='display: block;')
            ul.nav
              // Main menu
              li.current
                form.form-inline(method='post', action='/')
                  .form-group
                  button.btn.btn-default(style='width:170px')
                    i.glyphicon.glyphicon-home
                    |  Dashboard
              li
                form.form-inline(method='post', action='/kickstarterslist')
                  .form-group
                  button.btn.btn-default(style='width:170px')
                    i.glyphicon.glyphicon-list
                    |  Database
        .col-md-10
          .row
            .col-md-15
              .content-box-large
                .panel-heading
                  .panel-title Update Kickstarter Project Information
                .panel-body
                 form.form-inline(method='post', action='/kickstarter/:kickstarterId/save')
                  .form-group
                  center
                   table.table
                    tbody
                      tr.success
                        td Project Name
                        td
                         input.form-control(type='text', name='project_name', required='' value = "#{kickstarter.project_name}")
                      tr.danger
                        td Raised Amount
                        td
                         input.form-control(type='text', name='raised_amount', required='' value = "#{kickstarter.raised_amount}")
                      tr.warning
                        td Funding Date
                        td
                         input.form-control(type='text', name='funding_date', required='' value = "#{kickstarter.funding_date}")
                      tr.success
                        td Website
                        td 
                         input.form-control(type='text', name='website', required='' value = "#{kickstarter.website}")
                      tr.danger
                        td Kickstarter Page Link
                        td 
                         input.form-control(type='text', name='kickstarter_page', required='' value = "#{kickstarter.kickstarter_page}")
                      tr.warning
                        td Kickstarter Fund Goal 
                        td
                         input.form-control(type='text', name='kickstarter_fund', required='' value = "#{kickstarter.kickstarter_fund}")
                      tr.success
                        td Youtube Link
                        td
                         input.form-control(type='text', name='youtube_link', required='' value = "#{kickstarter.youtube_link}")
                      tr.danger
                        td Location
                        td
                         input.form-control(type='text', name='location', required=''  value = "#{kickstarter.location}")
                      tr.warning
                        td Category
                        td
                         input.form-control(type='text', name='category', required='' value = "#{kickstarter.category}")
                      tr.success
                        td Total Number of Backers
                        td
                         input.form-control(type='text', name='backer_count', required='' value = "#{kickstarter.backer_count}")
                      tr.danger
                        td Launch Date
                        td
                         input.form-control(type='text', name='launch_date', required=''  value = "#{kickstarter.launch_date}")
                      tr.warning
                        td Social Pages
                        td
                         input.form-control(rows='3', name='social_pages', required=''  value = "#{kickstarter.social_pages}")
                         input.form-control(type='hidden', name='kickstarter_id' value = "#{kickstarter._id}")
                      tr
                        td(colspan='2')
                          center
                           br
                           button.btn.btn-info Submit This Entry
                          center
                
