doctype html
html
  head
    title Database
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    // jQuery UI
    link(href='https://code.jquery.com/ui/1.10.3/themes/redmond/jquery-ui.css', rel='stylesheet', media='screen')
    // Bootstrap
    link(href='../bootstrap/css/bootstrap.min.css', rel='stylesheet')
    // styles
    link(href='../css/styles.css', rel='stylesheet')
    // HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
    // WARNING: Respond.js doesn't work if you view the page via file://
    //if lt IE 9
      script(src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')
      script(src='https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js')
  body
    .header
      .container
        .row
          .col-md-5
            // Logo
            .logo
              h1
                a(href='/') Successful Kickstarter Projects
          .col-md-7
            .navbar.navbar-inverse(role='banner')
              nav.collapse.navbar-collapse.bs-navbar-collapse.navbar-right(role='navigation')
                ul.nav.navbar-nav
                  li.dropdown
                    a.dropdown-toggle(href='#', data-toggle='dropdown')
                      if(user)
                        | You are logged in as : #{user.username} 
                        b.caret
                      ul.dropdown-menu.animated.fadeInUp
                        li
                          a(href='/auth/logout') Logout
    .page-content
      .row
        .col-md-2
          .sidebar.content-box(style='display: block;')
            ul.nav
              // Main menu
              li.current
                form(role="form", action="/", method="post")
                  .form-group
                    button.btn.btn-default(type="submit" style="width:100%;border:none") 
                      i.glyphicon.glyphicon-home
                      |  Dashboard
              li
                form(role="form", action="/kickstarters/list", method="post")
                  .form-group
                    button.btn.btn-default(type="submit" style="width:100%;border:none") 
                      i.glyphicon.glyphicon-calendar
                      |  Database
        .col-md-10
          .row
            .col-md-15
              .content-box-large
                .panel-body
                  fieldset
                        legend Kickstarter Projects
                        table(align='right')
                          tbody
                            tr
                              td(style='width:80%')
                                form.form-inline(method='post', action='/kickstarters/new')
                                  .form-group
                                    button.btn.btn-primary(type="submit" style="width:auto;border:none") 
                                      i.glyphicon.glyphicon-pencil
                                      |  New Entry
                  table.table.table-hover
                    thead
                      tr
                        th Project Name
                        th Raised Amount
                        th Location
                        th Category
                    tbody
                      for kickstarter in kickstarters
                        tr
                          td 
                            a(href='/kickstarters/#{kickstarter.id}') #{kickstarter.project_name}
                          td $ #{kickstarter.raised_amount}
                          td #{kickstarter.location}
                          td #{kickstarter.category}
    footer
      .container
        .copy.text-center
