doctype html
html
  head
    title Information
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    // jQuery UI
    link(href='https://code.jquery.com/ui/1.10.3/themes/redmond/jquery-ui.css', rel='stylesheet', media='screen')
    // Bootstrap
    link(href='../bootstrap/css/bootstrap.min.css', rel='stylesheet')
    // styles
    link(href='../css/styles.css', rel='stylesheet')
    // HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
    // WARNING: Respond.js doesn't work if you view the page via file://
    //if lt IE 9
      script(src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')
      script(src='https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js')
  body
    .header
      .container
        .row
          .col-md-5
            // Logo
            .logo
              h1
                a(href='/') Successful Kickstarter Projects
          .col-md-7
            .navbar.navbar-inverse(role='banner')
              nav.collapse.navbar-collapse.bs-navbar-collapse.navbar-right(role='navigation')
                ul.nav.navbar-nav
                  li.dropdown
                    a.dropdown-toggle(href='#', data-toggle='dropdown')
                      if(user)
                        | You are logged in as : #{user.username} 
                        b.caret
                      ul.dropdown-menu.animated.fadeInUp
                        li
                          a(href='/auth/logout') Logout
    .page-content
      .row
        .col-md-2
          .sidebar.content-box(style='display: block;')
            ul.nav
              // Main menu
              li.current
                form(role="form", action="/", method="post")
                  .form-group
                    button.btn.btn-default(type="submit" style="width:100%;;height:100%;border:none") 
                      i.glyphicon.glyphicon-home
                      |  Dashboard
              li
                form(role="form", action="/kickstarters/list", method="post")
                  .form-group
                    button.btn.btn-default(type="submit" style="width:100%;;height:100%;border:none") 
                      i.glyphicon.glyphicon-calendar
                      |  Database
        .col-md-10
          .row
            .col-md-15
              .content-box-large  
                .panel-body
                  fieldset
                        legend Preview of Kickstarter Project Entry
                        table(align='right')
                          tbody
                            tr
                              td(style='width:40%')
                                form.form-inline(method='post', action='/kickstarters/edit')
                                  .form-group
                                    input.form-control(type='hidden', name='kickstarter_id' value = "#{newProject._id}")
                                    button.btn.btn-primary(type="submit" style="width:150%;border:none") 
                                      i.glyphicon.glyphicon-pencil
                                      |  Edit
                              td(style='width:40%')
                                form.form-inline(method='post', action='/kickstarters/new')
                                  .form-group
                                    button.btn.btn-danger(type="submit" style="width:120%;border:none") 
                                      i.glyphicon.glyphicon-remove
                                      |  Delete
                  form.form-inline(method='post', action='/kickstarters/add')
                    .form-group
                    center
                     table.table.table-hover
                      tbody
                        tr
                          td(style='width:25%')
                            b Project Name
                          td #{newProject.project_name}
                        tr
                          td(style='width:25%')
                            b Raised Amount
                          td $ #{newProject.raised_amount}
                        tr
                          td(style='width:25%')
                            b Funding Date
                          td #{newProject.funding_date}
                        tr
                          td(style='width:25%')
                            b Website
                          td #{newProject.website}
                        tr
                          td(style='width:25%')
                            b Kickstarter Page Link
                          td #{newProject.kickstarter_page}
                        tr
                          td(style='width:25%')
                            b Kickstarter Fund Goal 
                          td $ #{newProject.kickstarter_fund}
                        tr
                          td(style='width:25%')
                            b Youtube Link
                          td #{newProject.youtube_link}
                        tr
                          td(style='width:25%')
                            b Location
                          td #{newProject.location}
                        tr
                          td(style='width:25%')
                            b Category
                          td #{newProject.category}
                        tr
                          td(style='width:25%')
                            b Total Number of Backers
                          td #{newProject.backer_count}
                        tr
                          td(style='width:25%')
                            b Launch Date
                          td #{newProject.launch_date}
                        tr
                          td(style='width:25%')
                            b Social Pages
                          td #{newProject.social_pages}
                        tr
                          td(colspan='2')
                            center
                             br
                             input.form-control(type='hidden', name='kickstarter_id' value = "#{newProject._id}")
                             button.btn.btn-success(type="submit" style="width:auto;border:none") 
                              i.glyphicon.glyphicon-ok
                              |  Submit Entry
                            center
                
    footer
      .container
        .copy.text-center
